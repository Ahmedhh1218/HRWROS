<?xml version="1.0"?>
<launch>

    <arg name="gui" default="true"/>

    <!-- We use the launcher for the first assignment to launch the world -->
    <include file="$(find hrwros_week5_assignment)/launch/week5_assignment1.launch">
        <arg name="gui" value="$(arg gui)" />
    </include>

    <!-- Add here the solution to Assignment 2 Part 1 -->
    <node pkg="tf2_tools" type="view_frames.py" name="view_frames_node" output="screen" />

    <!-- TF Echo between new_logical_camera_2_frame and camera_rgb_frame -->
    <node pkg="tf2_ros" type="tf2_echo" name="tf2_echo_node" output="screen">
        <arg name="source_frame" value="logical_camera_2_frame"/>
        <arg name="target_frame" value="camera_rgb_frame"/>
    </node>

</launch>

